{
  "headers": [
    {
      "source": "static/**/*.js",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "static/**/*.css",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/css; charset=utf-8"
        }
      ]
    },
    {
      "source": "**/*.html",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/static/**",
      "destination": "/static/:splat"
    },
    {
      "source": "/**",
      "destination": "/index.html"
    }
  ],
  "public": "build",
  "cleanUrls": false,
  "trailingSlash": false
} 